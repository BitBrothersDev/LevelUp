<div class="modern-card" id="<%= dom_id estimation_skill_level_item %>">
  <div class="card-icon">
    <i class="bi bi-person-lines-fill"></i>
  </div>
  <h3 class="card-title">Level <%= estimation_skill_level_item.level %></h3>
  <div class="detail-table">
    <div class="detail-row">
      <span class="detail-label">User ID</span>
      <span class="detail-value"><%= estimation_skill_level_item.user_id %></span>
    </div>
    <div class="detail-row">
      <span class="detail-label">Skill ID</span>
      <span class="detail-value"><%= estimation_skill_level_item.skill_id %></span>
    </div>
  </div>
  <div class="card-actions">
    <%= link_to "View details", estimation_skill_level_item, class: "btn btn-sm btn-outline-primary" %>
    <%= link_to "Edit", edit_estimation_skill_level_item_path(estimation_skill_level_item), class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>
