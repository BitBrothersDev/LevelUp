.page-wrapper
  .container
    .page-header
      .title-group
        %h1.page-title= @skill_level.skill&.name || "Skill ##{@skill_level.skill_id}"
        %p.page-subtitle= @skill_level.level&.title.presence || @skill_level.level&.name || 'Skill level overview'
      .page-actions
        = link_to 'Back to skill levels', skill_levels_path, class: 'btn btn-outline-secondary'
        = link_to 'Edit', edit_skill_level_path(@skill_level), class: 'btn btn-primary'

    - if notice
      .modern-alert{ role: 'alert' }= notice

    .detail-card
      .detail-table
        .detail-row
          .detail-label Skill
          .detail-value= @skill_level.skill&.name || @skill_level.skill_id
        .detail-row
          .detail-label Level
          .detail-value= @skill_level.level&.title.presence || @skill_level.level&.name || @skill_level.level_id
        - if @skill_level.notice.present?
          .detail-row
            .detail-label Notice
            .detail-value= @skill_level.notice

      .form-actions.justify-content-between
        = button_to 'Delete skill level', @skill_level, method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this skill level?' }, class: 'btn btn-danger'
        = link_to 'Create another', new_skill_level_path, class: 'btn btn-outline-primary'
