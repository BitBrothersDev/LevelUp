= form_with(model: skill_level, class: 'modern-form') do |form|
  - if skill_level.errors.any?
    .modern-alert.alert-danger{ role: 'alert' }
      %h2.mb-2= pluralize(skill_level.errors.count, 'error') + ' prevented this skill level from being saved:'
      %ul.mb-0
        - skill_level.errors.each do |error|
          %li= error.full_message

  .content-card
    .form-grid
      .form-group
        = form.label :skill_id, 'Skill'
        = form.select :skill_id, Skill.all.map { |skill| [skill.name, skill.id] }, { include_blank: 'Select skill' }, class: 'form-select'
      .form-group
        = form.label :level_id, 'Level'
        = form.select :level_id, Level.all.map { |level| [level.title.presence || level.name, level.id] }, { include_blank: 'Select level' }, class: 'form-select'
      .form-group
        = form.label :notice
        = form.text_area :notice, class: 'form-control', placeholder: 'Optional notes and expectations for this level'

  .form-actions
    = form.submit class: 'btn btn-primary'
