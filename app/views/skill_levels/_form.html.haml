= form_with(model: skill_level) do |form|
  - if skill_level.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(skill_level.errors.count, "error")
        prohibited this skill_level from being saved:
      %ul
        - skill_level.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :skill_id, style: "display: block"
    = form.select :skill_id, Skill.all.collect { |l| [l.name, l.id]}
  %div
    = form.label :level_id, style: "display: block"
    = form.select :level_id, Level.all.collect { |l| [l.name, l.id]}
  %div
    = form.label :notice, style: "display: block"
    = form.text_field :notice
  %div
    = form.submit
