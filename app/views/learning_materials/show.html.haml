.page-wrapper
  .container
    .page-header
      .title-group
        %h1.page-title= @learning_material.name.presence || 'Untitled material'
        %p.page-subtitle= @learning_material.material_type.present? ? @learning_material.material_type.titleize : 'Learning material overview'
      .page-actions
        = link_to 'Back to learning materials', learning_materials_path, class: 'btn btn-outline-secondary'
        = link_to 'Edit', edit_learning_material_path(@learning_material), class: 'btn btn-primary'

    - if notice
      .modern-alert{ role: 'alert' }= notice

    .detail-card
      .detail-table
        .detail-row
          .detail-label Name
          .detail-value= @learning_material.name.presence || 'Untitled'
        .detail-row
          .detail-label Material type
          .detail-value= @learning_material.material_type.present? ? @learning_material.material_type.titleize : 'Uncategorised'
        - if @learning_material.link.present?
          .detail-row
            .detail-label External link
            .detail-value= link_to @learning_material.link, @learning_material.link, target: '_blank', rel: 'noopener'
        .detail-row
          .detail-label Learnable type
          .detail-value= @learning_material.learnable_type.presence || 'Not assigned'
        .detail-row
          .detail-label Learnable ID
          .detail-value= @learning_material.learnable_id.presence || 'Not linked'
        - if @learning_material.skill_level_item_id.present?
          .detail-row
            .detail-label Skill level item ID
            .detail-value= @learning_material.skill_level_item_id

      .form-actions.justify-content-between
        = button_to 'Delete learning material', @learning_material, method: :delete, data: { turbo_confirm: 'Are you sure you want to remove this learning material?' }, class: 'btn btn-danger'
        = link_to 'Create another', new_learning_material_path, class: 'btn btn-outline-primary'
