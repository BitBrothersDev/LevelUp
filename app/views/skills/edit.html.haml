.page-wrapper
  .container
    .page-header
      .title-group
        %h1.page-title Edit skill
        %p.page-subtitle Refine details to keep the catalogue accurate
      .page-actions
        = link_to 'Back to skills', skills_path, class: 'btn btn-outline-secondary'
        = link_to 'View skill', @skill, class: 'btn btn-outline-primary'

    = render 'form', skill: @skill
