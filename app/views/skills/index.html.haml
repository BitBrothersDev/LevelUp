.page-wrapper
  .container
    .page-header
      .title-group
        %h1.page-title Skills
        %p.page-subtitle Discover capabilities and track their mastery
      .page-actions
        = link_to 'Add new skill', new_skill_path, class: 'btn btn-primary'

    - if notice
      .modern-alert{ role: 'alert' }= notice

    - if @skills.present?
      - @skills.each do |hash_parent_categories|
        - hash_parent_categories.each do |parent_category, skill_category_arr|
          .content-card.mb-4
            .d-flex.align-items-center.mb-3
              %h2.mb-0.fw-semibold= parent_category.presence || 'Unassigned parent category'
              .ms-auto.floating-toolbar
                %span.pill-tag Parent category
            - skill_category_arr.each do |skill_category, skill_arr|
              .mb-4
                .d-flex.align-items-center.mb-2
                  %h3.mb-0.fs-5= skill_category.presence || 'General'
                  .ms-auto
                    %span.pill-tag Skill category
                .card-grid
                  - skill_arr.each do |skill|
                    = render skill
    - else
      .empty-state
        %h3.mb-2 No skills yet
        %p.mb-0 Start by adding a skill to organise your catalog.
