.modern-card{ id: dom_id(level) }
  .card-icon
    %i.bi.bi-layers
  %h3.card-title= level.title.presence || level.name
  .card-meta= level.name
  .card-actions
    = link_to 'View details', level, class: 'btn btn-sm btn-outline-primary'
    = link_to 'Edit', edit_level_path(level), class: 'btn btn-sm btn-outline-secondary'
