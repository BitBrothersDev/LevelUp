= form_with(model: skill_category) do |form|
  - if skill_category.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(skill_category.errors.count, "error")
        prohibited this skill_category from being saved:
      %ul
        - skill_category.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :parent_category, style: "display: block"
    = form.select :parent_category_id, SkillCategory.all.collect { |s_c| [s_c.name, s_c.id]}, { include_blank: true },  class: 'form-select'
  / <div>
  / </div>
  / <div>
  / </div>
  %div
    = form.submit
