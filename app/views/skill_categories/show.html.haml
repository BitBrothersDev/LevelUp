.page-wrapper
  .container
    .page-header
      .title-group
        %h1.page-title= @skill_category.name
        %p.page-subtitle Skill category overview
      .page-actions
        = link_to 'Back to skill categories', skill_categories_path, class: 'btn btn-outline-secondary'
        = link_to 'Edit', edit_skill_category_path(@skill_category), class: 'btn btn-primary'

    - if notice
      .modern-alert{ role: 'alert' }= notice

    .detail-card
      .detail-table
        - if @skill_category.parent_category.present?
          .detail-row
            .detail-label Parent category
            .detail-value= @skill_category.parent_category.name
        - if @skill_category.children.any?
          .detail-row
            .detail-label Child categories
            .detail-value
              .pill-group
                - @skill_category.children.each do |child|
                  %span.pill= child.name
        - if @skill_category.children.empty? && @skill_category.parent_category.blank?
          .detail-row
            .detail-label Structure
            .detail-value Standalone category

      .form-actions.justify-content-between
        = button_to 'Delete skill category', @skill_category, method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this skill category?' }, class: 'btn btn-danger'
        = link_to 'Create another', new_skill_category_path, class: 'btn btn-outline-primary'
