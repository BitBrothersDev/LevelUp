.modern-card{ id: dom_id(material_container) }
  .card-icon
    %i.bi.bi-collection
  %h3.card-title= material_container.to_s
  .detail-table
    .detail-row
      .detail-label Job function
      .detail-value= material_container.job_function.title
    .detail-row
      .detail-label Level
      .detail-value= material_container.level.title.presence || material_container.level.name
  .card-actions
    = link_to 'View details', material_container, class: 'btn btn-sm btn-outline-primary'
    = link_to 'Edit', edit_material_container_path(material_container), class: 'btn btn-sm btn-outline-secondary'
