<div class="page-wrapper">
  <div class="container">
    <div class="page-header">
      <div class="title-group">
        <h1 class="page-title">Estimation skills</h1>
        <p class="page-subtitle">Monitor how teammates rate their proficiency</p>
      </div>
      <div class="page-actions">
        <%= link_to "New estimation skill", new_estimation_skill_path, class: "btn btn-primary" %>
      </div>
    </div>

    <% if notice.present? %>
      <div class="modern-alert" role="alert"><%= notice %></div>
    <% end %>

    <% if @estimation_skills.present? %>
      <div id="estimation_skills" class="card-grid">
        <% @estimation_skills.each do |estimation_skill| %>
          <%= render estimation_skill %>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <h3 class="mb-2">No estimations yet</h3>
        <p class="mb-0">Invite your team to record their current skill levels.</p>
      </div>
    <% end %>
  </div>
</div>
